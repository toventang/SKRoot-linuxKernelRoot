<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardElevation="6dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障检查：" />


                <CheckBox
                    android:id="@+id/enable_boot_fail_protect_ckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启用开机失败保护"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/test_skroot_basics_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单项检查"/>

                    <Button
                        android:layout_marginLeft="8dp"
                        android:id="@+id/test_skroot_default_module_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="核心模块检查"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardElevation="6dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日志：" />

                <CheckBox
                    android:id="@+id/enable_skroot_log_ckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启用详细日志"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/show_skroot_log_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看日志"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardElevation="6dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全提示：" />

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为避免被侦测，可使用寄生模式，或卸载管理器App，功能依然生效" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            card_view:cardElevation="6dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于：" />

                <TextView
                    android:id="@+id/about_ver_tv"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内置核心版本：" />

                <LinearLayout
                    android:id="@+id/core_update_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/core_update_found_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发现新版本：vX.X.X"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/core_update_changelog_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看更新日志"
                            android:textSize="13sp"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  |  "
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/core_update_download_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击开始下载"
                            android:textSize="13sp"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="官方网站：" />

                    <TextView
                        android:id="@+id/link_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="13sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="#1E88E5"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>

</ScrollView>